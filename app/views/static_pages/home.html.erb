<% provide(:title, t(".home")) %>
<% if logged_in? %>
  <aside class="col-md-4">
    <section>
      <h1>
        <%= current_user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= link_to t(".word_list"), words_path,
      class: "btn btn-lg btn-primary" %>
    <%= link_to t(".lesson"), caterories_path,
      class: "btn btn-lg btn-success" %>
    <div class="clearfix"></div>
    <br/>
    <div>
      <h3><%= t(".activities") %></h3>
      <%= render @activities %>
    </div>
  </div>
<% else %>
  <div class="container-responsive">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-8">
        <div class="center jumbotron">
          <h1><%= t ".welcome" %></h1>
          <h2><%= t ".pragraph" %></h2>    
          <%= link_to t(".signup"), signup_path, class: "btn btn-lg btn-primary" %>
        </div>
      </div>
      <div class="col-xs-6 col-md-4">
          <h3><%= t(".login") %></h3>
          <%= render "shared/form_login" %>
      </div>
    </div>
  </div>
<% end %>
