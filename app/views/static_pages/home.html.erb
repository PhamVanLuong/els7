<% provide(:title, t("title.home")) %>
<% if user_signed_in? %>
  <aside class="col-md-4">
    <section>
      <h1><%= current_user.name %></h1>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= link_to t("word.word_list"), words_path,
      class: "btn btn-lg btn-primary" %>
    <%= link_to t("home.lesson"), caterories_path,
      class: "btn btn-lg btn-success" %>
    <div class="clearfix"></div>
    <br/>
    <div>
      <% if current_user.activities.present? %>
        <h3><%= t("activity.activities") %></h3>
        <%= render @activities %>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="container-responsive">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-8">
        <div class="center jumbotron">
          <h1><%= t "flash.welcome" %></h1>
          <h2><%= t "home.pragraph" %></h2>    
          <%= link_to t("home.signup"), new_user_registration_path, class: "btn btn-lg btn-primary" %>
        </div>
      </div>
      <div class="col-xs-6 col-md-4">
        <h3><%= t("title.login") %></h3>
      </div>
    </div>
  </div>
<% end %>
