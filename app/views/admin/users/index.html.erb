<% provide(:title, t("admin.user_all")) %>
<div class="table-title">
  <h1><%= t("admin.user_all") %></h1>
</div>

<div class="page-center">
  <%= will_paginate %>
</div>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
      <% if current_user.admin? && !current_user?(user) %>
        | <%= link_to t("admin.delete"), [:admin, user], method: :delete,
          data: {confirm: t("admin.admin_confirm")} %>
      <% end %>
    </li>
  <% end %>
</ul>
