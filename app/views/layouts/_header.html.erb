<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to t("title.base_title"), root_path, id: "logo", class: "navbar-brand" %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to t("title.home"), root_path, class: "active" %></li>
        <li><%= link_to t("title.help"), help_path, class: "active" %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t("header.language") %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t("header.english"), locale: "en" %></li>
            <li><%= link_to t("header.vietnamese"), locale: "vi" %></li>
          </ul>
        </li>
      </ul>
      <% if user_signed_in? %>
        <%= render "layouts/header_login" %>
      <% else %>
        <%= render "layouts/header_no_login" %>
      <% end %>
    </div>
  </div>
</header>
