<% provide :title, t(".following") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
      <span><%= link_to t(".profile"), @user %></span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= t(".following") %></h3>
    <h5>
      <%= t ".number_following", number: @users.count %>
    <h5>
    <ul class="users">
      <% if @users.empty? %>
        <h2><%= t(".empty") %></h2>
      <% else %>
        <%= render @users %>
      <% end %>
    </ul>
  </div>
</div>
